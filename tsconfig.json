{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["backend/**/*.ts"],
    "exclude": ["frontend/**", "node_modules", "dist"]
}
